#php_flag display_errors On
#php_value error_reporting 2047
php_flag short_open_tag off
#php_flag magic_quotes_gpc on
#php_flag session.use_trans_sid off
#php_value allow_url_fopen 0
#php_value default_charset "utf-8"
#php_flag mysql.trace_mode On
#php_flag register_globals off
php_flag zlib.output_compression on

#presmerovani na www.
#RewriteCond %{HTTP_HOST} ^flickr.vojtasvoboda\.cz
#RewriteRule ^(.*)$ http://flickr.vojtasvoboda.cz/$1 [L,R=301,QSA]

RewriteBase /
RewriteEngine On

#doplneni lomitek
RewriteCond %{REQUEST_URI} !\.[[:alnum:]]+$
RewriteRule ^(.+[^/])$ /$1/ [L,R=301]

#jednotliva pravidla
#RewriteRule ^administrace/(.*)/$ admin/index.php [L,QSA]
#RewriteRule ^administrace/(.*)$ admin/$1 [L,QSA]

#RewriteRule ^admin/(.*)$ /index.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ index.php [L,QSA]

#chyby
ErrorDocument 403 http://flickr.vojtasvoboda.cz/404/
ErrorDocument 404 http://flickr.vojtasvoboda.cz/404/
